<div class='book-body'>
  <div class="book-top">
    <div class="book-left">
      <div class="contents-row" id='contents-row'>
          <%= render @comments %>
      </div>
      <div class="container">
        <%= form_with class:'comment-container', local: true do |form| %>
        <%= form.text_area :content, placeholder: "コメントする", class:'comment-text',id:"comment-text" %>
        <%= form.submit "SEND", class:'comment-btn',id:'comment-btn' %>
        <% end %>
        <input type="hidden" data-behavior="comment_speaker" data-user="<%= current_user.id %>" data-note="<%= @note.id %>">
      </div>
    </div>
    <div class="book-right">
      <div class="views">
        <%= form_with model: @note, url: note_path(@note.id), id:'text-content', local: true do |f| %>
          <div class="title-contents">
            <%= f.text_field :title, id:'memo-title', row: '3',class:'memo-title' %>
          </div>
          <div class="text-contents">
            <%= f.rich_text_area :action_text, id:'memo-content', class:'memo-content' %>
          </div>
        <% end %>
      </div>
    </div>
  </div> 
</div> 