<div class='book-body'>
  <div class="book-top">
    <div class="book-left">
      <%= render "index" %>
    </div>
    <div class="book-right">
      <div class="views">
        <%= form_with model: @note, url: note_path(@note.id), id:'text-content', local: true do |f| %>
          <div class="contents">
            <%= f.text_field :title, id:'memo-title', class:'memo-title' %>
          </div>
          <div class="contents">
            <%= f.rich_text_area :action_text, id:'memo-content', class:'memo-content' %>
          </div>
        <% end %>
      </div>
      <div class="toolbar">
        <%= render "toolbar" %>
      </div>
    </div>
  </div> 
</div> 